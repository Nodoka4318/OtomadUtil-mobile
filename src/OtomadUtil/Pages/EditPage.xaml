<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
	xmlns:local="clr-namespace:OtomadUtil"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="OtomadUtil.EditPage"
	BackgroundColor="Color.White">
	
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="3*"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="4*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		
		<Image x:Name="preview" Grid.Row="0" Grid.ColumnSpan="6"/>
		<Slider x:Name="pv_slider" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"/>
		<Button x:Name="filePick_Button" Grid.Row="1" Grid.Column="0"
		BackgroundColor="Color.White"
		TextColor="LightBlue"
		FontSize="15"
		BorderColor="LightBlue"
		BorderWidth="2"
		Text="Open"/>
		
		
	</Grid>
		
</ContentPage>